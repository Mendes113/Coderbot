# ==============================================
# CODERBOT V2 - DEVELOPMENT MAKEFILE
# ==============================================

.PHONY: help dev-up dev-down dev-restart dev-logs dev-logs-f dev-backend dev-frontend dev-build dev-clean dev-status

# Default target
help:
	@echo "CodeBot V2 - Development Environment"
	@echo ""
	@echo "Available commands:"
	@echo "  make dev-up        - Start development environment"
	@echo "  make dev-down      - Stop development environment"
	@echo "  make dev-restart   - Restart development environment"
	@echo "  make dev-logs      - Show all logs"
	@echo "  make dev-logs-f    - Show logs in real-time"
	@echo "  make dev-backend   - Show backend logs"
	@echo "  make dev-frontend  - Show frontend logs"
	@echo "  make dev-build     - Rebuild all images"
	@echo "  make dev-clean     - Clean containers, volumes and images"
	@echo "  make dev-status    - Show services status"
	@echo ""
	@echo "Quick start:"
	@echo "  make dev-up        # Start the development environment"
	@echo "  make dev-logs-f    # Watch logs in real-time"

# Development environment commands
dev-up:
	@echo "ğŸš€ Starting development environment..."
	@./dev.sh up

dev-down:
	@echo "ğŸ›‘ Stopping development environment..."
	@./dev.sh down

dev-restart:
	@echo "ğŸ”„ Restarting development environment..."
	@./dev.sh restart

dev-logs:
	@echo "ğŸ“‹ Showing all logs..."
	@./dev.sh logs

dev-logs-f:
	@echo "ğŸ“‹ Showing logs in real-time..."
	@./dev.sh logs-f

dev-backend:
	@echo "ğŸ“‹ Showing backend logs..."
	@./dev.sh backend

dev-frontend:
	@echo "ğŸ“‹ Showing frontend logs..."
	@./dev.sh frontend

dev-build:
	@echo "ğŸ”¨ Rebuilding all images..."
	@./dev.sh build

dev-clean:
	@echo "ğŸ§¹ Cleaning containers, volumes and images..."
	@./dev.sh clean

dev-status:
	@echo "ğŸ“Š Showing services status..."
	@./dev.sh status

# Production environment commands (using original docker-compose)
prod-up:
	@echo "ğŸš€ Starting production environment..."
	@docker-compose up -d --build

prod-down:
	@echo "ğŸ›‘ Stopping production environment..."
	@docker-compose down

prod-logs:
	@echo "ğŸ“‹ Showing production logs..."
	@docker-compose logs

prod-logs-f:
	@echo "ğŸ“‹ Showing production logs in real-time..."
	@docker-compose logs -f

# Setup commands
setup:
	@echo "ğŸ”§ Setting up development environment..."
	@if [ ! -f .env ]; then cp env.example .env; echo "âœ… Created .env file from env.example"; fi
	@chmod +x dev.sh
	@echo "âœ… Development environment setup complete!"
	@echo ""
	@echo "Next steps:"
	@echo "  1. Edit .env file with your API keys"
	@echo "  2. Run 'make dev-up' to start the environment"

# Utility commands
check:
	@echo "ğŸ” Checking prerequisites..."
	@command -v docker >/dev/null 2>&1 || { echo "âŒ Docker is not installed"; exit 1; }
	@command -v docker-compose >/dev/null 2>&1 || { echo "âŒ Docker Compose is not installed"; exit 1; }
	@echo "âœ… All prerequisites are installed"

# Quick development workflow
dev: dev-up dev-logs-f

# Clean everything and start fresh
fresh: dev-clean setup dev-up
